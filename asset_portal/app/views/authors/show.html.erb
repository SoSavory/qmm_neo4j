<h3><%= @author.person.name %></h3>
<span>Publications: <%= @author.articles.count %></span>

<div id="search_results">
  <% @author.articles.each do |article| %>
    <div class="search_result">
      <%= link_to article.raw_article.title, article_path(article.id) %>
      <br>
      <% article.authors.each do |author| %>
        <%= link_to "[#{author.person.name}]", author_path(author.id) %>
      <% end %>
        <div class="abstract"><%= article.raw_article.abstract%></div>
      </div>
  <% end %>
</div>
