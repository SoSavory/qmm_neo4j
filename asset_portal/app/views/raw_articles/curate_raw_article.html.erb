<div id="left_right_container">
  <div class="left">
    <h2>ArXiv Data</h2>
    <div class="article">

      <span>
        <%= @raw_article.short_arxiv_identifier %>
        <%= @raw_article.title %>
      </span>
      <br/>
      <%= @raw_article.authors %>
      <br/>
      <span>
        Abstract
      </span>
      <p>
        <%= @raw_article.abstract %>
      </p>
    </div>
  </div>

  <div class="right">
    <h2>Fill Out</h2>
    <%= render partial: "raw_articles/curate_form", locals: {article: @article} %>
  </div>
</div>
